<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20sp"
    android:background="@drawable/finalbgforallreporthistory">

    <ImageView
        android:layout_width="match_parent"
        android:background="@drawable/black_shape"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:layout_marginBottom="10sp"
        android:src="@drawable/finalvisualreportimg"/>

    <Button
        android:id="@+id/btnVisualReportHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:background="@drawable/button"
        android:text="My Visual Report History"
        android:textColor="#000000" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/black_shape"
        android:scaleType="centerCrop"
        android:src="@drawable/audioreport2"/>

    <Button
        android:id="@+id/btnAudioReportHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:background="@drawable/button"
        android:text="My Audio Report History"
        android:textColor="#000000" />

</LinearLayout>