<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4sp"
    android:layout_marginBottom="4sp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relcod"
        android:layout_margin="4sp">

        <ImageView
            android:id="@+id/imageviewcoddd"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:padding="2sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading"
            android:textSize="20sp"
            android:layout_marginRight="55sp"
            android:id="@+id/textvieewcod"
            android:layout_toEndOf="@id/imageviewcoddd"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/seconfview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textvieewcod"
            android:layout_marginStart="8sp"
            android:maxLines="1"
            android:layout_marginRight="55sp"
            android:layout_marginBottom="3dp"
            android:layout_toEndOf="@id/imageviewcoddd"
            android:text="Loading"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/image_delete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_call_black_24dp" />
    </RelativeLayout>


    
</androidx.cardview.widget.CardView>