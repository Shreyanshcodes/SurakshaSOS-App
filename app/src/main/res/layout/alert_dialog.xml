<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="19dp"
    android:background="#000000">


    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/final_logo"></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Just one step more for SURAKSHA ! Plz Provide The required Permissions For Your Safety"
        android:textColor="#F7F2F2"
        android:textStyle="bold"></TextView>

    <Button
        android:id="@+id/permissionsbtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@color/design_default_color_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Allow Permissions!"></Button>

</LinearLayout>