<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20sp"
    android:background="@drawable/surakshasosreportbg9">

    <ImageView
        android:layout_width="match_parent"
        android:background="@drawable/black_shape"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:layout_marginBottom="10sp"
        android:src="@drawable/caughtimg"/>
    <Button
        android:id="@+id/btnVisualReport11"
        android:textColor="#fff"
        android:background="@drawable/black_shape"
        android:layout_width="match_parent"
        android:layout_marginBottom="10sp"
        android:layout_height="wrap_content"
        android:text="Submit Visual Report" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/black_shape"
        android:scaleType="centerCrop"
        android:src="@drawable/audioreport"/>

    <Button
        android:id="@+id/btnAudioReport11"
        android:layout_width="match_parent"
        android:textColor="#fff"
        android:layout_marginTop="10sp"
        android:background="@drawable/black_shape"
        android:layout_height="wrap_content"
        android:text="Submit Audio Report" />

</LinearLayout>